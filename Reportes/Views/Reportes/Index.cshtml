@model Reportes.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard general";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="mb-2 fw-bold">Dashboard ChocoFreseo 🍓</h1>
        <p class="text-muted">Resumen general de ventas, pedidos y domicilios.</p>
    </div>
</div>

<!-- =========================== -->
<!--        KPIs PRINCIPALES     -->
<!-- =========================== -->

<div class="row g-3 mb-4">

    <!-- Ventas hoy -->
    <div class="col-md-3">
        <div class="card ch-card-kpi border-0 shadow-sm">
            <div class="card-body">
                <span class="text-muted small">Ventas hoy</span>
                <h3 class="mt-1 fw-bold">@Model.VentasHoy.ToString("C")</h3>
            </div>
        </div>
    </div>

    <!-- Ventas mes -->
    <div class="col-md-3">
        <div class="card ch-card-kpi border-0 shadow-sm">
            <div class="card-body">
                <span class="text-muted small">Ventas del mes</span>
                <h3 class="mt-1 fw-bold">@Model.VentasMes.ToString("C")</h3>
            </div>
        </div>
    </div>

    <!-- Pedidos hoy -->
    <div class="col-md-3">
        <div class="card ch-card-kpi border-0 shadow-sm">
            <div class="card-body">
                <span class="text-muted small">Pedidos hoy</span>
                <h3 class="mt-1 fw-bold">@Model.PedidosHoy</h3>
            </div>
        </div>
    </div>

    <!-- Domicilios hoy -->
    <div class="col-md-3">
        <div class="card ch-card-kpi border-0 shadow-sm">
            <div class="card-body">
                <span class="text-muted small">Domicilios hoy</span>
                <h3 class="mt-1 fw-bold">@Model.DomiciliosHoy</h3>
            </div>
        </div>
    </div>
</div>

<!-- =========================== -->
<!--     SEGUNDA FILA KPIs       -->
<!-- =========================== -->

<div class="row g-3 mb-4">

    <!-- Producto más vendido -->
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <span class="text-muted small">Producto más vendido</span>

                @if (string.IsNullOrEmpty(Model.ProductoMasVendido))
                {
                    <h5 class="mt-1 mb-0 text-muted">Sin datos</h5>
                }
                else
                {
                    <h5 class="mt-1 mb-0">@Model.ProductoMasVendido</h5>
                    <p class="mb-0 text-muted">Unidades: @Model.ProductoMasVendidoCantidad</p>
                }
            </div>
        </div>
    </div>

    <!-- Cliente top -->
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <span class="text-muted small">Cliente top</span>

                @if (string.IsNullOrEmpty(Model.ClienteTopNombre))
                {
                    <h5 class="mt-1 mb-0 text-muted">Sin datos</h5>
                }
                else
                {
                    <h5 class="mt-1 mb-0">@Model.ClienteTopNombre</h5>
                    <p class="mb-0 text-muted">
                        Total gastado: @Model.ClienteTopTotal.ToString("C")
                    </p>
                }
            </div>
        </div>
    </div>

    <!-- Domicilios en proceso -->
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <span class="text-muted small">Domicilios en proceso</span>
                <h3 class="mt-1 fw-bold">@Model.DomiciliosEnProceso</h3>

                <p class="mb-0 text-muted">Entregados este mes: @Model.DomiciliosCompletadosMes</p>
            </div>
        </div>
    </div>

</div>

<!-- =========================== -->
<!--    GRÁFICO + ACUMULADOS     -->
<!-- =========================== -->

<div class="row g-3">

    <!-- Gráfico últimos 7 días -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="mb-0">Ventas últimos 7 días</h5>
                </div>
                <canvas id="chartVentas7dias" style="min-height:280px;"></canvas>
            </div>
        </div>
    </div>

    <!-- Resumen acumulado -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="mb-2">Resumen acumulado</h5>

                <ul class="list-unstyled mb-0">

                    <li class="d-flex justify-content-between mb-1">
                        <span>Total ventas históricas</span>
                        <strong>@Model.VentasTotales.ToString("C")</strong>
                    </li>

                    <li class="d-flex justify-content-between mb-1">
                        <span>Pedidos totales</span>
                        <strong>@Model.PedidosTotales</strong>
                    </li>

                    <li class="d-flex justify-content-between mb-1">
                        <span>Pedidos este mes</span>
                        <strong>@Model.PedidosMes</strong>
                    </li>

                </ul>
            </div>
        </div>
    </div>

</div>


<!-- =========================== -->
<!--       SCRIPTS GRÁFICO       -->
<!-- =========================== -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const labels7 = @Html.Raw(Model.LabelsUltimos7DiasJson);
        const data7 = @Html.Raw(Model.DatosUltimos7DiasJson);

        const ctx = document.getElementById('chartVentas7dias').getContext('2d');

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels7,
                datasets: [{
                    label: 'Ventas ($)',
                    data: data7,
                    tension: 0.3,
                    borderWidth: 2,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    </script>
}
