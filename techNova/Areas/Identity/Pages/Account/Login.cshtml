@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="min-h-screen flex items-center justify-center bg-neutral-100 px-4">

    <div class="w-full max-w-md bg-white border border-neutral-200 rounded-2xl shadow-sm p-8 space-y-6">

        <!-- BRAND + TÍTULO -->
        <div class="flex items-center justify-between mb-2">
            <div class="flex items-center gap-3">
                <div class="h-10 w-10 rounded-2xl bg-neutral-900 flex items-center justify-center">
                    <span class="text-sm font-semibold tracking-wide text-neutral-50">TN</span>
                </div>
                <div class="leading-tight">
                    <p class="text-[0.65rem] uppercase tracking-[0.18em] text-neutral-500">
                        Technova
                    </p>
                    <p class="text-xs text-neutral-700">
                        Panel administrativo
                    </p>
                </div>
            </div>

            <div class="hidden sm:flex items-center gap-1 text-[0.7rem] text-neutral-500">
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-3.5 w-3.5" viewBox="0 0 24 24"
                     fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3 12h18" />
                    <path d="M3 6h18" />
                    <path d="M3 18h18" />
                </svg>
                <span>Control en tiempo real</span>
            </div>
        </div>

        <!-- ENCABEZADO -->
        <div>
            <h1 class="text-2xl font-semibold text-neutral-900">
                Iniciar sesión
            </h1>
            <p class="text-xs text-neutral-500 mt-1">
                Accede para gestionar clientes, productos y ventas.
            </p>
        </div>

        <!-- FORMULARIO -->
        <form method="post" class="space-y-5">
            <!-- VALIDACIÓN -->
            <div asp-validation-summary="ModelOnly"
                 class="text-xs text-rose-600 bg-rose-50 border border-rose-100 rounded-xl px-3 py-2">
            </div>

            <!-- Email -->
            <div class="space-y-1.5">
                <label asp-for="Input.Email"
                       class="block text-xs font-semibold tracking-wide text-neutral-700 uppercase"></label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-3 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             class="h-4 w-4 text-neutral-400"
                             viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="2"
                             stroke-linecap="round" stroke-linejoin="round">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H7a4 4 0 0 0-4 4v2" />
                            <circle cx="9" cy="7" r="4" />
                        </svg>
                    </span>
                    <input asp-for="Input.Email"
                           class="mt-0 w-full pl-9 pr-3 py-2 rounded-xl border border-neutral-200 bg-neutral-50 text-sm
                                  focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-neutral-900" />
                </div>
                <span asp-validation-for="Input.Email" class="text-xs text-rose-600"></span>
            </div>

            <!-- Password -->
            <div class="space-y-1.5">
                <label asp-for="Input.Password"
                       class="block text-xs font-semibold tracking-wide text-neutral-700 uppercase"></label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-3 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             class="h-4 w-4 text-neutral-400"
                             viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="2"
                             stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="11" width="18" height="10" rx="2" />
                            <path d="M7 11V7a5 5 0 0 1 10 0v4" />
                        </svg>
                    </span>
                    <input asp-for="Input.Password" type="password"
                           class="mt-0 w-full pl-9 pr-3 py-2 rounded-xl border border-neutral-200 bg-neutral-50 text-sm
                                  focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-neutral-900" />
                </div>
                <span asp-validation-for="Input.Password" class="text-xs text-rose-600"></span>
            </div>

            <!-- Remember Me + Forgot -->
            <div class="flex items-center justify-between text-xs mt-1">
                <div class="flex items-center gap-2">
                    <input asp-for="Input.RememberMe"
                           class="h-4 w-4 rounded border-neutral-300 text-neutral-900 focus:ring-neutral-900" />
                    <label asp-for="Input.RememberMe" class="text-neutral-600"></label>
                </div>

                <a asp-page="./ForgotPassword"
                   class="text-neutral-800 hover:text-neutral-950 hover:underline">
                    ¿Olvidaste tu contraseña?
                </a>
            </div>

            <!-- Botón ingresar -->
            <button type="submit"
                    class="w-full py-2.5 bg-neutral-900 text-neutral-50 font-semibold rounded-xl text-sm
                           shadow-sm hover:bg-neutral-800 transition">
                Iniciar sesión
            </button>
        </form>

        <!-- EXTERNAL LOGIN + REGISTRO -->
        <div class="space-y-4 pt-2">
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="space-y-2">
                    <p class="text-center text-[0.7rem] text-neutral-500">
                        o continúa con
                    </p>
                    <div class="flex flex-wrap justify-center gap-2">
                        @foreach (var provider in Model.ExternalLogins)
                        {
                            <form method="post"
                                  asp-page="./ExternalLogin"
                                  asp-route-provider="@provider.Name"
                                  class="inline">
                                <button class="px-3 py-1.5 border border-neutral-200 rounded-full text-xs text-neutral-800
                                                       bg-white hover:bg-neutral-50 hover:border-neutral-400 transition">
                                    @provider.DisplayName
                                </button>
                            </form>
                        }
                    </div>
                </div>
            }

            <div class="text-center text-[0.75rem] text-neutral-600">
                ¿No tienes cuenta?
                <a asp-page="./Register"
                   class="text-neutral-900 font-semibold hover:text-neutral-950 hover:underline">
                    Crear una cuenta
                </a>
            </div>
        </div>

        <div class="pt-2 border-t border-neutral-100 mt-2">
            <p class="text-[0.65rem] text-neutral-400 text-center">
                © @DateTime.Now.Year TechNova · Panel de inventario
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
