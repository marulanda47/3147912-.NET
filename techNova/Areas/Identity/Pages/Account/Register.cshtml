@page
@model RegisterModel
@{
    ViewData["Title"] = "Crear cuenta";
}

<div class="min-h-screen flex items-center justify-center bg-neutral-100 px-4">

    <div class="w-full max-w-xl bg-white border border-neutral-200 rounded-2xl shadow-sm p-8 md:p-9 space-y-6">

        <!-- TOP: BRAND + TEXTO -->
        <div class="flex items-start justify-between gap-4">
            <div class="flex items-center gap-3">
                <div class="h-10 w-10 rounded-2xl bg-neutral-900 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         class="h-5 w-5 text-neutral-50" viewBox="0 0 24 24"
                         fill="none" stroke="currentColor" stroke-width="2"
                         stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="4" width="18" height="14" rx="2" />
                        <path d="M3 10h18" />
                        <path d="M8 7h.01" />
                        <path d="M12 7h.01" />
                        <path d="M16 7h.01" />
                    </svg>
                </div>
                <div class="leading-tight">
                    <p class="text-[0.65rem] uppercase tracking-[0.18em] text-neutral-500">
                        Technova
                    </p>
                    <p class="text-xs text-neutral-700">
                        Sistema de inventario
                    </p>
                </div>
            </div>

            <div class="hidden sm:flex items-center gap-1 text-[0.7rem] text-neutral-500">
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-3.5 w-3.5" viewBox="0 0 24 24"
                     fill="none" stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4 19h16" />
                    <path d="M4 11h16" />
                    <path d="M4 7h16" />
                </svg>
                <span>Organiza tu operación</span>
            </div>
        </div>

        <!-- ENCABEZADO -->
        <div>
            <h1 class="text-2xl md:text-3xl font-semibold text-neutral-900">
                Crear cuenta
            </h1>
            <p class="text-xs text-neutral-500 mt-1">
                Regístrate para comenzar a administrar clientes, productos y ventas.
            </p>
        </div>

        <!-- FORMULARIO -->
        <form method="post" class="space-y-5">
            <!-- Validación -->
            <div asp-validation-summary="ModelOnly"
                 class="text-xs text-rose-600 bg-rose-50 border border-rose-100 rounded-xl px-3 py-2">
            </div>

            <!-- Email -->
            <div class="space-y-1.5">
                <label asp-for="Input.Email"
                       class="block text-xs font-semibold tracking-wide text-neutral-700 uppercase"></label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-3 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             class="h-4 w-4 text-neutral-400"
                             viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="2"
                             stroke-linecap="round" stroke-linejoin="round">
                            <rect x="2" y="4" width="20" height="16" rx="2" />
                            <polyline points="22,6 12,13 2,6" />
                        </svg>
                    </span>
                    <input asp-for="Input.Email"
                           class="mt-0 w-full pl-9 pr-3 py-2 rounded-xl border border-neutral-200 bg-neutral-50 text-sm
                                  focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-neutral-900" />
                </div>
                <span asp-validation-for="Input.Email" class="text-xs text-rose-600"></span>
            </div>

            <!-- Password -->
            <div class="space-y-1.5">
                <label asp-for="Input.Password"
                       class="block text-xs font-semibold tracking-wide text-neutral-700 uppercase"></label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-3 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             class="h-4 w-4 text-neutral-400"
                             viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="2"
                             stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="11" width="18" height="10" rx="2" />
                            <path d="M7 11V7a5 5 0 0 1 10 0v4" />
                        </svg>
                    </span>
                    <input asp-for="Input.Password" type="password"
                           class="mt-0 w-full pl-9 pr-3 py-2 rounded-xl border border-neutral-200 bg-neutral-50 text-sm
                                  focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-neutral-900" />
                </div>
                <span asp-validation-for="Input.Password" class="text-xs text-rose-600"></span>
            </div>

            <!-- Confirmar Password -->
            <div class="space-y-1.5">
                <label asp-for="Input.ConfirmPassword"
                       class="block text-xs font-semibold tracking-wide text-neutral-700 uppercase"></label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-3 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             class="h-4 w-4 text-neutral-400"
                             viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="2"
                             stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="11" width="18" height="10" rx="2" />
                            <path d="M7 11V7a5 5 0 0 1 10 0v4" />
                        </svg>
                    </span>
                    <input asp-for="Input.ConfirmPassword" type="password"
                           class="mt-0 w-full pl-9 pr-3 py-2 rounded-xl border border-neutral-200 bg-neutral-50 text-sm
                                  focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-neutral-900" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-xs text-rose-600"></span>
            </div>

            <!-- Botón registrar -->
            <button type="submit"
                    class="w-full py-2.5 bg-neutral-900 text-neutral-50 font-semibold rounded-xl text-sm
                           shadow-sm hover:bg-neutral-800 transition">
                Crear cuenta
            </button>
        </form>

        <!-- LINK A LOGIN -->
        <div class="pt-3 border-t border-neutral-100 mt-1">
            <p class="text-[0.75rem] text-neutral-600 text-center">
                ¿Ya tienes una cuenta?
                <a asp-page="./Login"
                   class="text-neutral-900 font-semibold hover:text-neutral-950 hover:underline">
                    Inicia sesión aquí
                </a>
            </p>
        </div>

        <div>
            <p class="text-[0.65rem] text-neutral-400 text-center">
                Tus credenciales se almacenan de forma segura en TechNova.
            </p>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
