@*
    Views/Shared/_Layout.cshtml
*@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TechNova</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Bootstrap para validaciones MVC -->
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet"
              href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    </environment>
</head>
<body class="bg-neutral-100 min-h-screen">
    <div class="flex flex-col min-h-screen">

        <!-- HEADER NEUTRO -->
        <header class="bg-white border-b border-neutral-200">
            <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-16">

                    <!-- LOGO / NOMBRE -->
                    <div class="flex items-center gap-3">
                        <a asp-controller="Home" asp-action="Index"
                           class="flex items-center gap-3 group">
                            <div class="h-9 w-9 rounded-xl bg-neutral-900 flex items-center justify-center text-sm font-semibold text-neutral-50 group-hover:bg-black transition">
                                TN
                            </div>
                            <div class="flex flex-col leading-tight">
                                <span class="text-sm font-semibold text-neutral-900 group-hover:text-black transition">
                                    TechNova
                                </span>
                                <span class="text-xs text-neutral-500">Sistema de inventario</span>
                            </div>
                        </a>
                    </div>

                    <!-- MENÚ DESKTOP -->
                    <div class="hidden md:flex items-center gap-1 text-sm">

                        <a asp-controller="Home" asp-action="Index"
                           class="group inline-flex items-center gap-2 px-3 py-2 rounded-lg text-neutral-700 hover:bg-neutral-100 hover:text-black transition">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 class="h-4 w-4 text-neutral-500 group-hover:text-neutral-900 transition"
                                 viewBox="0 0 24 24" fill="none"
                                 stroke="currentColor" stroke-width="2"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path d="M3 9.5L12 3l9 6.5V21a1 1 0 0 1-1 1h-5.5v-6h-5v6H4a1 1 0 0 1-1-1V9.5z" />
                            </svg>
                            Dashboard
                        </a>

                        <a asp-controller="Clientes" asp-action="Index"
                           class="group inline-flex items-center gap-2 px-3 py-2 rounded-lg text-neutral-700 hover:bg-neutral-100 hover:text-black transition">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 class="h-4 w-4 text-neutral-500 group-hover:text-neutral-900 transition"
                                 viewBox="0 0 24 24" fill="none"
                                 stroke="currentColor" stroke-width="2"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H7a4 4 0 0 0-4 4v2" />
                                <circle cx="9" cy="7" r="4" />
                            </svg>
                            Clientes
                        </a>

                        <a asp-controller="Productoes" asp-action="Index"
                           class="group inline-flex items-center gap-2 px-3 py-2 rounded-lg text-neutral-700 hover:bg-neutral-100 hover:text-black transition">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 class="h-4 w-4 text-neutral-500 group-hover:text-neutral-900 transition"
                                 viewBox="0 0 24 24" fill="none"
                                 stroke="currentColor" stroke-width="2"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="4" width="18" height="16" rx="2" />
                                <path d="M3 10h18" />
                            </svg>
                            Productos
                        </a>

                        <a asp-controller="Ventas" asp-action="Index"
                           class="group inline-flex items-center gap-2 px-3 py-2 rounded-lg text-neutral-700 hover:bg-neutral-100 hover:text-black transition">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 class="h-4 w-4 text-neutral-500 group-hover:text-neutral-900 transition"
                                 viewBox="0 0 24 24" fill="none"
                                 stroke="currentColor" stroke-width="2"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path d="M3 3h18l-1.5 9h-15z" />
                                <circle cx="8.5" cy="19.5" r="1.5" />
                                <circle cx="17.5" cy="19.5" r="1.5" />
                            </svg>
                            Ventas
                        </a>
                    </div>

                    <!-- LOGIN DESKTOP -->
                    <div class="hidden md:block">
                        <partial name="_LoginPartial" />
                    </div>

                    <!-- BOTÓN MENÚ MÓVIL -->
                    <button class="md:hidden text-neutral-700 hover:text-black"
                            type="button"
                            onclick="toggleMobileMenu()">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             class="h-7 w-7" viewBox="0 0 24 24"
                             fill="none" stroke="currentColor" stroke-width="2"
                             stroke-linecap="round" stroke-linejoin="round">
                            <line x1="3" y1="6" x2="21" y2="6" />
                            <line x1="3" y1="12" x2="21" y2="12" />
                            <line x1="3" y1="18" x2="21" y2="18" />
                        </svg>
                    </button>
                </div>

                <!-- MENÚ MÓVIL -->
                <div id="mobileMenu" class="hidden md:hidden pb-3 border-t border-neutral-200 mt-1">
                    <div class="pt-3 space-y-1 text-sm">

                        <a asp-controller="Home" asp-action="Index"
                           class="flex items-center gap-2 px-3 py-2 rounded-lg text-neutral-900 bg-neutral-100 hover:bg-neutral-200 transition">
                            <svg class="h-4 w-4 text-neutral-700" viewBox="0 0 24 24"
                                 fill="none" stroke="currentColor" stroke-width="2"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path d="M3 9.5L12 3l9 6.5V21a1 1 0 0 1-1 1h-5.5v-6h-5v6H4a1 1 0 0 1-1-1V9.5z" />
                            </svg>
                            Dashboard
                        </a>

                        <a asp-controller="Clientes" asp-action="Index"
                           class="flex items-center gap-2 px-3 py-2 rounded-lg text-neutral-800 hover:bg-neutral-100 transition">
                            <svg class="h-4 w-4 text-neutral-600" viewBox="0 0 24 24"
                                 fill="none" stroke="currentColor" stroke-width="2"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H7a4 4 0 0 0-4 4v2" />
                                <circle cx="9" cy="7" r="4" />
                            </svg>
                            Clientes
                        </a>

                        <a asp-controller="Productoes" asp-action="Index"
                           class="flex items-center gap-2 px-3 py-2 rounded-lg text-neutral-800 hover:bg-neutral-100 transition">
                            <svg class="h-4 w-4 text-neutral-600" viewBox="0 0 24 24"
                                 fill="none" stroke="currentColor" stroke-width="2"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="4" width="18" height="16" rx="2" />
                                <path d="M3 10h18" />
                            </svg>
                            Productos
                        </a>

                        <a asp-controller="Ventas" asp-action="Index"
                           class="flex items-center gap-2 px-3 py-2 rounded-lg text-neutral-800 hover:bg-neutral-100 transition">
                            <svg class="h-4 w-4 text-neutral-600" viewBox="0 0 24 24"
                                 fill="none" stroke="currentColor" stroke-width="2"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path d="M3 3h18l-1.5 9h-15z" />
                                <circle cx="8.5" cy="19.5" r="1.5" />
                                <circle cx="17.5" cy="19.5" r="1.5" />
                            </svg>
                            Ventas
                        </a>

                        <div class="px-3 pt-2">
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <!-- CONTENIDO -->
        <main class="flex-1 max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 py-6">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)

    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            if (menu) {
                menu.classList.toggle('hidden');
            }
        }
    </script>
</body>
</html>
