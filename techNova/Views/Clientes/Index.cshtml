@model IEnumerable<techNova.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="mb-6 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div class="flex items-center gap-3">
        <div class="h-10 w-10 rounded-2xl bg-neutral-900 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg"
                 class="h-5 w-5 text-neutral-100"
                 viewBox="0 0 24 24"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="2"
                 stroke-linecap="round"
                 stroke-linejoin="round">
                <path d="M16 21v-2a4 4 0 0 0-4-4H7a4 4 0 0 0-4 4v2" />
                <circle cx="9" cy="7" r="4" />
                <path d="M21 21v-2a3 3 0 0 0-2-2.82" />
                <path d="M16 3.13a3.5 3.5 0 0 1 0 6.74" />
            </svg>
        </div>
        <div>
            <h1 class="text-2xl md:text-3xl font-semibold text-neutral-900">Clientes</h1>
            <p class="text-xs text-neutral-500 mt-0.5">
                Administración centralizada de los clientes registrados en el sistema.
            </p>
        </div>
    </div>

    <a asp-action="Create"
       class="inline-flex items-center px-4 py-2 rounded-xl bg-neutral-900 text-neutral-50 text-sm font-medium
              shadow-sm hover:bg-neutral-800 transition">
        <svg xmlns="http://www.w3.org/2000/svg"
             class="h-4 w-4 mr-1.5"
             viewBox="0 0 24 24"
             fill="none"
             stroke="currentColor"
             stroke-width="2"
             stroke-linecap="round"
             stroke-linejoin="round">
            <path d="M12 5v14" />
            <path d="M5 12h14" />
        </svg>
        Nuevo cliente
    </a>
</div>

<!-- Fila de “chips” de resumen (estructura distinta) -->
<div class="mb-6 grid grid-cols-1 sm:grid-cols-3 gap-3 text-xs">
    <div class="rounded-xl border border-neutral-200 bg-white px-4 py-3 flex items-center justify-between">
        <span class="text-neutral-500 uppercase tracking-wide">Total</span>
        <span class="text-neutral-900 font-semibold">
            @Model.Count()
        </span>
    </div>
    <div class="rounded-xl border border-neutral-200 bg-white px-4 py-3 flex items-center justify-between">
        <span class="text-neutral-500 uppercase tracking-wide">Con correo</span>
        <span class="text-neutral-900 font-semibold">
            @Model.Count(c => !string.IsNullOrWhiteSpace(c.Correo))
        </span>
    </div>
    <div class="rounded-xl border border-neutral-200 bg-white px-4 py-3 flex items-center justify-between">
        <span class="text-neutral-500 uppercase tracking-wide">Con teléfono</span>
        <span class="text-neutral-900 font-semibold">
            @Model.Count(c => !string.IsNullOrWhiteSpace(c.Telefono))
        </span>
    </div>
</div>

<!-- BUSCADOR / FILTRO -->
<form method="get" class="mb-6">
    <div class="flex flex-col md:flex-row gap-3 md:items-center">
        <div class="flex-1 relative">
            <span class="absolute inset-y-0 left-3 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-4 w-4 text-neutral-400"
                     viewBox="0 0 24 24"
                     fill="none"
                     stroke="currentColor"
                     stroke-width="2"
                     stroke-linecap="round"
                     stroke-linejoin="round">
                    <circle cx="11" cy="11" r="8" />
                    <line x1="21" y1="21" x2="16.65" y2="16.65" />
                </svg>
            </span>
            <input type="text" name="search" value="@ViewData["Search"]"
                   placeholder="Buscar por nombre, correo o teléfono"
                   class="w-full pl-9 pr-3 py-2 rounded-xl border border-neutral-200 bg-neutral-50 text-sm
                          focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-neutral-900" />
        </div>

        <button type="submit"
                class="inline-flex items-center px-4 py-2 rounded-xl border border-neutral-300 text-neutral-800 text-sm
                       bg-white hover:bg-neutral-100 transition">
            <svg xmlns="http://www.w3.org/2000/svg"
                 class="h-4 w-4 mr-1.5"
                 viewBox="0 0 24 24"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="2"
                 stroke-linecap="round"
                 stroke-linejoin="round">
                <path d="M3 6h18" />
                <path d="M3 12h12" />
                <path d="M3 18h6" />
            </svg>
            Filtrar
        </button>
    </div>
</form>

<!-- TABLA -->
<div class="overflow-hidden bg-white shadow-sm border border-neutral-200 rounded-2xl">
    <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
            <thead class="bg-neutral-900 text-xs font-medium text-neutral-200 uppercase tracking-wide">
                <tr>
                    <th class="px-4 py-3 text-left font-medium">Nombre</th>
                    <th class="px-4 py-3 text-left font-medium">Correo</th>
                    <th class="px-4 py-3 text-left font-medium">Teléfono</th>
                    <th class="px-4 py-3 text-right font-medium">Acciones</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-neutral-100">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-neutral-50 transition">
                        <td class="px-4 py-3 text-neutral-900">@item.NombreCompleto</td>
                        <td class="px-4 py-3 text-neutral-700">@item.Correo</td>
                        <td class="px-4 py-3 text-neutral-700">@item.Telefono</td>
                        <td class="px-4 py-3 text-right">
                            <div class="inline-flex items-center gap-2">

                                <!-- Ver -->
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="inline-flex items-center justify-center h-8 w-8 rounded-full
                                              border border-neutral-200 text-neutral-700 bg-white hover:bg-neutral-100 transition"
                                   title="Ver detalles">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         class="h-4 w-4"
                                         viewBox="0 0 24 24"
                                         fill="none"
                                         stroke="currentColor"
                                         stroke-width="2"
                                         stroke-linecap="round"
                                         stroke-linejoin="round">
                                        <path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7-11-7-11-7z" />
                                        <circle cx="12" cy="12" r="3" />
                                    </svg>
                                </a>

                                <!-- Editar -->
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="inline-flex items-center justify-center h-8 w-8 rounded-full
                                              border border-neutral-200 text-neutral-800 bg-white hover:bg-neutral-100 transition"
                                   title="Editar cliente">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         class="h-4 w-4"
                                         viewBox="0 0 24 24"
                                         fill="none"
                                         stroke="currentColor"
                                         stroke-width="2"
                                         stroke-linecap="round"
                                         stroke-linejoin="round">
                                        <path d="M12 20h9" />
                                        <path d="M16.5 3.5a2.12 2.12 0 0 1 3 3L7 19l-4 1 1-4 12.5-12.5z" />
                                    </svg>
                                </a>

                                <!-- Eliminar -->
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="inline-flex items-center justify-center h-8 w-8 rounded-full
                                              border border-rose-200 text-rose-600 bg-rose-50 hover:bg-rose-100 transition"
                                   title="Eliminar cliente">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         class="h-4 w-4"
                                         viewBox="0 0 24 24"
                                         fill="none"
                                         stroke="currentColor"
                                         stroke-width="2"
                                         stroke-linecap="round"
                                         stroke-linejoin="round">
                                        <polyline points="3 6 5 6 21 6" />
                                        <path d="M19 6l-1 14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2L5 6" />
                                    </svg>
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
