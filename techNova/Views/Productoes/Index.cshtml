@model IEnumerable<techNova.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<div class="mb-6 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div class="flex items-center gap-3">
        <div class="h-10 w-10 rounded-2xl bg-neutral-900 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg"
                 class="h-5 w-5 text-neutral-50"
                 viewBox="0 0 24 24"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="2"
                 stroke-linecap="round"
                 stroke-linejoin="round">
                <path d="M3 9l9-6 9 6-9 6-9-6z" />
                <path d="M3 15l9 6 9-6" />
                <path d="M3 9v6" />
                <path d="M21 9v6" />
            </svg>
        </div>
        <div>
            <h1 class="text-2xl md:text-3xl font-semibold text-neutral-900">Productos</h1>
            <p class="text-xs text-neutral-500 mt-0.5">
                Inventario general de todos los productos registrados en TechNova.
            </p>
        </div>
    </div>

    <a asp-action="Create"
       class="inline-flex items-center px-4 py-2 rounded-xl bg-neutral-900 text-neutral-50 text-sm font-medium
              shadow-sm hover:bg-neutral-800 transition">
        <svg xmlns="http://www.w3.org/2000/svg"
             class="h-4 w-4 mr-1.5"
             viewBox="0 0 24 24"
             fill="none"
             stroke="currentColor"
             stroke-width="2"
             stroke-linecap="round"
             stroke-linejoin="round">
            <path d="M12 5v14" />
            <path d="M5 12h14" />
        </svg>
        Nuevo producto
    </a>
</div>

<!-- Tarjetas de resumen -->
<div class="mb-6 grid grid-cols-1 sm:grid-cols-3 gap-3 text-xs">
    <div class="rounded-xl border border-neutral-200 bg-white px-4 py-3 flex items-center justify-between">
        <span class="text-neutral-500 uppercase tracking-wide">Productos</span>
        <span class="text-neutral-900 font-semibold">
            @Model.Count()
        </span>
    </div>
    <div class="rounded-xl border border-neutral-200 bg-white px-4 py-3 flex items-center justify-between">
        <span class="text-neutral-500 uppercase tracking-wide">Stock total</span>
        <span class="text-neutral-900 font-semibold">
            @Model.Sum(p => p.Stock)
        </span>
    </div>
    <div class="rounded-xl border border-neutral-200 bg-white px-4 py-3 flex items-center justify-between">
        <span class="text-neutral-500 uppercase tracking-wide">Valor estimado</span>
        <span class="text-neutral-900 font-semibold">
            $@Model.Sum(p => p.PrecioUnitario * p.Stock)
        </span>
    </div>
</div>

<!-- BUSCADOR -->
<form method="get" class="mb-6">
    <div class="flex flex-col md:flex-row gap-3 md:items-center">
        <div class="flex-1 relative">
            <span class="absolute inset-y-0 left-3 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-4 w-4 text-neutral-400"
                     viewBox="0 0 24 24"
                     fill="none"
                     stroke="currentColor"
                     stroke-width="2"
                     stroke-linecap="round"
                     stroke-linejoin="round">
                    <circle cx="11" cy="11" r="8" />
                    <line x1="21" y1="21" x2="16.65" y2="16.65" />
                </svg>
            </span>
            <input type="text"
                   name="search"
                   value="@ViewData["Search"]"
                   placeholder="Buscar por nombre o código"
                   class="w-full pl-9 pr-3 py-2 rounded-xl border border-neutral-200 bg-neutral-50 text-sm
                          focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-neutral-900" />
        </div>

        <button class="inline-flex items-center px-4 py-2 rounded-xl border border-neutral-300 text-neutral-800 text-sm
                       bg-white hover:bg-neutral-100 transition">
            <svg xmlns="http://www.w3.org/2000/svg"
                 class="h-4 w-4 mr-1.5"
                 viewBox="0 0 24 24"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="2"
                 stroke-linecap="round"
                 stroke-linejoin="round">
                <path d="M3 6h18" />
                <path d="M3 12h12" />
                <path d="M3 18h6" />
            </svg>
            Filtrar
        </button>
    </div>
</form>

<!-- TABLA -->
<div class="overflow-hidden bg-white shadow-sm border border-neutral-200 rounded-2xl">
    <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
            <thead class="bg-neutral-900 text-xs font-medium text-neutral-200 uppercase tracking-wide">
                <tr>
                    <th class="px-4 py-3 text-left">Código</th>
                    <th class="px-4 py-3 text-left">Nombre</th>
                    <th class="px-4 py-3 text-left">Precio</th>
                    <th class="px-4 py-3 text-left">Stock</th>
                    <th class="px-4 py-3 text-right">Acciones</th>
                </tr>
            </thead>

            <tbody class="divide-y divide-neutral-100">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-neutral-50 transition">
                        <td class="px-4 py-3 text-neutral-700">@item.Codigo</td>
                        <td class="px-4 py-3 font-medium text-neutral-900">@item.Nombre</td>
                        <td class="px-4 py-3 text-neutral-800">$@item.PrecioUnitario</td>
                        <td class="px-4 py-3">
                            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium
                                             border border-neutral-300 text-neutral-800 bg-neutral-50">
                                @item.Stock
                            </span>
                        </td>
                        <td class="px-4 py-3 text-right">
                            <div class="inline-flex items-center gap-2">

                                <!-- Ver -->
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="inline-flex items-center justify-center h-8 w-8 rounded-full
                                              border border-neutral-200 text-neutral-700 bg-white hover:bg-neutral-100 transition"
                                   title="Ver detalles">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         class="h-4 w-4"
                                         viewBox="0 0 24 24"
                                         fill="none"
                                         stroke="currentColor"
                                         stroke-width="2"
                                         stroke-linecap="round"
                                         stroke-linejoin="round">
                                        <path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7-11-7-11-7z" />
                                        <circle cx="12" cy="12" r="3" />
                                    </svg>
                                </a>

                                <!-- Editar -->
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="inline-flex items-center justify-center h-8 w-8 rounded-full
                                              border border-neutral-200 text-neutral-900 bg-white hover:bg-neutral-100 transition"
                                   title="Editar producto">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         class="h-4 w-4"
                                         viewBox="0 0 24 24"
                                         fill="none"
                                         stroke="currentColor"
                                         stroke-width="2"
                                         stroke-linecap="round"
                                         stroke-linejoin="round">
                                        <path d="M12 20h9" />
                                        <path d="M16.5 3.5a2.12 2.12 0 0 1 3 3L7 19l-4 1 1-4 12.5-12.5z" />
                                    </svg>
                                </a>

                                <!-- Eliminar -->
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="inline-flex items-center justify-center h-8 w-8 rounded-full
                                              border border-rose-200 text-rose-600 bg-rose-50 hover:bg-rose-100 transition"
                                   title="Eliminar producto">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         class="h-4 w-4"
                                         viewBox="0 0 24 24"
                                         fill="none"
                                         stroke="currentColor"
                                         stroke-width="2"
                                         stroke-linecap="round"
                                         stroke-linejoin="round">
                                        <path d="M3 6h18" />
                                        <path d="M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                                        <path d="M19 6l-1 14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2L5 6" />
                                    </svg>
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
