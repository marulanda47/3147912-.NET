@model techNova.Models.Producto

@{
    ViewData["Title"] = "Nuevo Producto";
}

<div class="mb-6 flex items-center justify-between">
    <div class="flex items-center gap-3">
        <div class="h-10 w-10 rounded-2xl bg-neutral-900 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg"
                 class="h-5 w-5 text-neutral-50"
                 viewBox="0 0 24 24"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="2"
                 stroke-linecap="round"
                 stroke-linejoin="round">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                <path d="M12 8v8" />
                <path d="M8 12h8" />
            </svg>
        </div>

        <div>
            <h1 class="text-2xl md:text-3xl font-semibold text-neutral-900">Nuevo producto</h1>
            <p class="text-xs text-neutral-500 mt-0.5">
                Registra un nuevo producto para gestionarlo en el inventario de TechNova.
            </p>
        </div>
    </div>
</div>

<div class="bg-white shadow-sm border border-neutral-200 rounded-2xl p-6 md:p-8">
    <form asp-action="Create" class="space-y-6">

        <div asp-validation-summary="ModelOnly"
             class="text-sm text-rose-700 bg-rose-50 border border-rose-100 rounded-xl px-4 py-3 mb-2">
        </div>

        <div class="space-y-5">
            <div class="border-b border-neutral-100 pb-3 mb-2">
                <h2 class="text-sm font-semibold text-neutral-800">Información del producto</h2>
                <p class="text-xs text-neutral-500 mt-0.5">
                    Define los datos básicos que se usarán en ventas y reportes.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                <!-- Código -->
                <div class="space-y-1.5">
                    <label asp-for="Codigo" class="text-xs font-semibold tracking-wide text-neutral-700 uppercase"></label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-3 flex items-center pointer-events-none">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 class="h-4 w-4 text-neutral-400"
                                 viewBox="0 0 24 24"
                                 fill="none"
                                 stroke="currentColor"
                                 stroke-width="2"
                                 stroke-linecap="round"
                                 stroke-linejoin="round">
                                <path d="M4 6h1v12H4z" />
                                <path d="M7 6h1v12H7z" />
                                <path d="M10 6h2v12h-2z" />
                                <path d="M14 6h1v12h-1z" />
                                <path d="M17 6h2v12h-2z" />
                            </svg>
                        </span>
                        <input asp-for="Codigo"
                               class="w-full pl-9 pr-3 py-2 rounded-xl border border-neutral-200 bg-neutral-50 text-sm
                                      focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-neutral-900" />
                    </div>
                    <span asp-validation-for="Codigo" class="text-xs text-rose-600"></span>
                </div>

                <!-- Nombre -->
                <div class="space-y-1.5">
                    <label asp-for="Nombre" class="text-xs font-semibold tracking-wide text-neutral-700 uppercase"></label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-3 flex items-center pointer-events-none">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 class="h-4 w-4 text-neutral-400"
                                 viewBox="0 0 24 24"
                                 fill="none"
                                 stroke="currentColor"
                                 stroke-width="2"
                                 stroke-linecap="round"
                                 stroke-linejoin="round">
                                <path d="M4 4h12v5H4z" />
                                <path d="M4 9h12l4 6H8z" />
                            </svg>
                        </span>
                        <input asp-for="Nombre"
                               class="w-full pl-9 pr-3 py-2 rounded-xl border border-neutral-200 bg-neutral-50 text-sm
                                      focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-neutral-900" />
                    </div>
                    <span asp-validation-for="Nombre" class="text-xs text-rose-600"></span>
                </div>

                <!-- Precio -->
                <div class="space-y-1.5">
                    <label asp-for="PrecioUnitario" class="text-xs font-semibold tracking-wide text-neutral-700 uppercase"></label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-3 flex items-center text-neutral-400 text-xs">$</span>
                        <input asp-for="PrecioUnitario"
                               class="w-full pl-7 pr-3 py-2 rounded-xl border border-neutral-200 bg-neutral-50 text-sm
                                      focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-neutral-900" />
                    </div>
                    <span asp-validation-for="PrecioUnitario" class="text-xs text-rose-600"></span>
                </div>

                <!-- Stock -->
                <div class="space-y-1.5">
                    <label asp-for="Stock" class="text-xs font-semibold tracking-wide text-neutral-700 uppercase"></label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-3 flex items-center pointer-events-none">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 class="h-4 w-4 text-neutral-400"
                                 viewBox="0 0 24 24"
                                 fill="none"
                                 stroke="currentColor"
                                 stroke-width="2"
                                 stroke-linecap="round"
                                 stroke-linejoin="round">
                                <rect x="3" y="7" width="18" height="13" rx="2" />
                                <path d="M3 11h18" />
                            </svg>
                        </span>
                        <input asp-for="Stock"
                               class="w-full pl-9 pr-3 py-2 rounded-xl border border-neutral-200 bg-neutral-50 text-sm
                                      focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-neutral-900" />
                    </div>
                    <span asp-validation-for="Stock" class="text-xs text-rose-600"></span>
                </div>
            </div>

            <!-- Descripción -->
            <div class="space-y-1.5">
                <label asp-for="Descripcion" class="text-xs font-semibold tracking-wide text-neutral-700 uppercase"></label>
                <textarea asp-for="Descripcion" rows="3"
                          class="w-full px-3 py-2 rounded-xl border border-neutral-200 bg-neutral-50 text-sm
                                 focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-neutral-900"></textarea>
                <span asp-validation-for="Descripcion" class="text-xs text-rose-600"></span>
            </div>
        </div>

        <!-- Botones -->
        <div class="flex justify-end gap-3 pt-4">
            <a asp-action="Index"
               class="inline-flex items-center px-4 py-2 rounded-xl border border-neutral-300 text-neutral-800 text-sm
                      bg-white hover:bg-neutral-100 transition">
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-4 w-4 mr-1.5"
                     viewBox="0 0 24 24"
                     fill="none"
                     stroke="currentColor"
                     stroke-width="2"
                     stroke-linecap="round"
                     stroke-linejoin="round">
                    <polyline points="15 18 9 12 15 6" />
                </svg>
                Cancelar
            </a>

            <button type="submit"
                    class="inline-flex items-center px-6 py-2 rounded-xl bg-neutral-900 text-neutral-50 text-sm font-medium
                           shadow-sm hover:bg-neutral-800 transition">
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-4 w-4 mr-1.5"
                     viewBox="0 0 24 24"
                     fill="none"
                     stroke="currentColor"
                     stroke-width="2"
                     stroke-linecap="round"
                     stroke-linejoin="round">
                    <path d="M12 5v14" />
                    <path d="M5 12h14" />
                </svg>
                Guardar producto
            </button>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
