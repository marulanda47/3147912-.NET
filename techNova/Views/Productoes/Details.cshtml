@model techNova.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="mb-6 flex items-center gap-3">
    <div class="h-10 w-10 rounded-2xl bg-neutral-900 flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg"
             class="h-5 w-5 text-neutral-50"
             viewBox="0 0 24 24"
             fill="none"
             stroke="currentColor"
             stroke-width="2"
             stroke-linecap="round"
             stroke-linejoin="round">
            <circle cx="12" cy="12" r="10" />
            <path d="M12 6v6l3 3" />
        </svg>
    </div>
    <div>
        <h1 class="text-2xl md:text-3xl font-semibold text-neutral-900">Detalles del producto</h1>
        <p class="text-xs text-neutral-500 mt-0.5">
            Información detallada del producto en inventario.
        </p>
    </div>
</div>

<div class="bg-white shadow-sm border border-neutral-200 rounded-2xl p-6 md:p-8 space-y-6">

    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div class="space-y-1">
            <h2 class="text-xl font-semibold text-neutral-900">@Model.Nombre</h2>
            <p class="text-xs text-neutral-500">
                Código: <span class="font-medium text-neutral-800">@Model.Codigo</span>
            </p>
        </div>

        <span class="inline-flex items-center rounded-full bg-neutral-900 px-3 py-1 text-xs font-medium text-neutral-50">
            Producto activo
        </span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-sm text-neutral-800">
        <div class="space-y-1">
            <p class="font-semibold text-neutral-500 text-xs uppercase tracking-wide">Precio unitario</p>
            <p class="text-base">$@Model.PrecioUnitario</p>
        </div>

        <div class="space-y-1">
            <p class="font-semibold text-neutral-500 text-xs uppercase tracking-wide">Stock disponible</p>
            <p class="text-base">@Model.Stock unidades</p>
        </div>

        <div class="space-y-1 md:col-span-3">
            <p class="font-semibold text-neutral-500 text-xs uppercase tracking-wide">Descripción</p>
            <p class="text-sm leading-relaxed text-neutral-800">
                @Model.Descripcion
            </p>
        </div>
    </div>

    <div class="flex justify-end gap-3 pt-4">
        <a asp-action="Index"
           class="inline-flex items-center px-4 py-2 rounded-xl border border-neutral-300 text-neutral-800 text-sm
                  bg-white hover:bg-neutral-100 transition">
            <svg xmlns="http://www.w3.org/2000/svg"
                 class="h-4 w-4 mr-1.5"
                 viewBox="0 0 24 24"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="2"
                 stroke-linecap="round"
                 stroke-linejoin="round">
                <polyline points="15 18 9 12 15 6" />
            </svg>
            Volver
        </a>

        <a asp-action="Edit" asp-route-id="@Model.Id"
           class="inline-flex items-center px-6 py-2 rounded-xl bg-neutral-900 text-neutral-50 text-sm font-medium
                  shadow-sm hover:bg-neutral-800 transition">
            <svg xmlns="http://www.w3.org/2000/svg"
                 class="h-4 w-4 mr-1.5"
                 viewBox="0 0 24 24"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="2"
                 stroke-linecap="round"
                 stroke-linejoin="round">
                <path d="M12 20h9" />
                <path d="M16.5 3.5a2.12 2.12 0 0 1 3 3L7 19l-4 1 1-4 12.5-12.5z" />
            </svg>
            Editar
        </a>
    </div>
</div>
